{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src/**/*", "./api/*", "./api/**/*", "./*index.*", "./public/*", "./types/**/*"],
}
